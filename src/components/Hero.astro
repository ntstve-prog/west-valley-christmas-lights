    animation-delay: 3.2s;
    font-size: 1.2rem;
  }

  .snowflake:nth-child(15) {
    left: 20%;
    animation-duration: 13.3s;
    animation-delay: 1.8s;
    font-size: 1.5rem;
  }

  @keyframes fall {
    to {
      transform: translateY(110vh) rotate(360deg);
    }
  }

  /* Christmas Lights - Realistic hanging string with wire */
  .christmas-lights {
    position: absolute;
    top: -10px;
    left: 0;
    right: 0;
    height: 80px;
    pointer-events: none;
    z-index: 10;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* SVG wire that connects the lights */
  .lights-wire {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }

  /* Light bulbs hanging from the wire */
  .light-bulb {
    position: absolute;
    width: 12px;
    height: 18px;
    border-radius: 40% 40% 50% 50%;
    top: 22px;
    transform: translateX(-50%);
    animation: twinkle 2s ease-in-out infinite;
    will-change: opacity;
  }

  /* Add hanging wire from main wire to bulb */
  .light-bulb::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    height: 8px;
    background: #374151;
  }

  /* Bulb cap/socket at top */
  .light-bulb::after {
    content: '';
    position: absolute;
    top: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 4px;
    background: #1F2937;
    border-radius: 2px;
  }

  /* Brand colors for bulbs with enhanced glowing halos */
  .light-bulb.red {
    background: radial-gradient(ellipse at 30% 30%, #FCA5A5, #DC2626, #991B1B);
    box-shadow:
      0 0 15px rgba(220, 38, 38, 0.8),
      0 0 25px rgba(220, 38, 38, 0.5),
      0 0 35px rgba(220, 38, 38, 0.3);
  }

  .light-bulb.green {
    background: radial-gradient(ellipse at 30% 30%, #86EFAC, #16A34A, #15803D);
    box-shadow:
      0 0 15px rgba(22, 163, 74, 0.8),
      0 0 25px rgba(22, 163, 74, 0.5),
      0 0 35px rgba(22, 163, 74, 0.3);
    animation-delay: 0.66s;
  }

  .light-bulb.yellow {
    background: radial-gradient(ellipse at 30% 30%, #FEF3C7, #FBBF24, #D97706);
    box-shadow:
      0 0 15px rgba(251, 191, 36, 0.8),
      0 0 25px rgba(251, 191, 36, 0.5),
      0 0 35px rgba(251, 191, 36, 0.3);
    animation-delay: 1.33s;
  }

  /* Performance-optimized twinkle animation - opacity only */
  @keyframes twinkle {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  /* Responsive sizing for lights */
  @media (min-width: 768px) {
    .christmas-lights {
      top: -10px;
      height: 100px;
    }

    .light-bulb {
      width: 16px;
      height: 24px;
      top: 28px;
    }

    .light-bulb::before {
      top: -12px;
      height: 12px;
    }

    .light-bulb::after {
      width: 10px;
      height: 5px;
    }
  }

  @media (min-width: 1024px) {
    .christmas-lights {
      top: -15px;
    }

    .light-bulb {
      width: 18px;
      height: 28px;
      top: 32px;
    }

    .light-bulb::before {
      top: -14px;
      height: 14px;
    }

    .light-bulb::after {
      width: 12px;
      height: 6px;
    }
  }

